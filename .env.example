# =============================================
# 股票AI分析系统 环境变量配置
# =============================================

# 应用端口配置
GUPIAO_PORT=8501
HTTP_PORT=80
HTTPS_PORT=443
REDIS_PORT=6379

# 构建配置
BUILD_TIME=2025-01-01T00:00:00Z
VERSION=latest
GITHUB_SHA=

# Docker配置
COMPOSE_PROJECT_NAME=gupiao
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# 时区配置
TZ=Asia/Shanghai

# 日志级别
LOG_LEVEL=INFO

# 开发模式（生产环境设为false）
DEBUG=false

# 数据库配置（如果需要）
DATABASE_URL=sqlite:///app/data/gupiao.db

# API配置
API_RATE_LIMIT=100
API_TIMEOUT=30

# 缓存配置
CACHE_ENABLE=true
CACHE_TTL=3600

# 安全配置
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# 监控配置
METRICS_ENABLE=true
HEALTH_CHECK_ENABLE=true
